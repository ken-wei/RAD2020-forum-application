<% provide(:title, 'Sign up') %>
<div class="users_form">
  <h1>Sign Up</h1>

  <%# Render the error messages if there's any error inside users form %>
  <%= render 'shared/error_messages'%>
  
  <%= form_with model: @user, local: true do |form| %>
    <div class="form-group row">
      <%= form.label :email, "Email", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= form.text_field :email, placeholder: "Enter user name", class: "form-control" %>
      </div>
    </div>
    
    <div class="form-group row">
      <%= label_tag(:password, "Password", class: "col-sm-2 col-form-label") %>
      <div class="col-sm-10">
        <%= form.password_field :password, placeholder: "8 - 20 characters", class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= label_tag(:password_confirmation, "Password", class: "col-sm-2 col-form-label") %>
      <div class="col-sm-10">
        <%= form.password_field :password_confirmation, placeholder: "Confirm password", class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= label_tag(:mobile, "Mobile", class: "col-sm-2 col-form-label") %>      
      <div class="col-sm-10">
        <%= form.text_field :mobile, placeholder: "Mobile Number", class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= content_tag(:p, "", class: "col-sm-2 col-form-label") %>
      <div class="col-sm-10">
        <%= form.submit "Sign Up", class: "submit_button form-control" %>      
      </div>
    </div>

  <% end %>
  

  <%= link_to "Already a user?", login_path, class: "btn btn-lg btn primary users-link" %>

</div>


