<% provide(:title, "Verification")%>
<div class="settings-container">
    
    <%= render 'side_navbar' %>

    <div class="settings-content" id="settings-partial">
        <div class="setting-container">
            
            <%= render 'setting_header'%>

            <%= render 'shared/error_messages' %>

            <div id="setting-form">
                <%= form_with url: verification_upload_path(@user.id), method: :put, local: true do |form| %>
                    
                    
                    <div class="personal-container input-group">
                        <span class="info-title input-group-addon" id="basic-addon1">Type of Card</span>
                        <%= form.text_field :cardtype, required: true, class: "form-control personal-form" %>
                    </div>

                    <div class="personal-container input-group">
                        <span class="info-title  input-group-addon" id="basic-addon1">Card Number</span>
                        <%= form.text_field :cardno, required: true, class: "form-control personal-form" %>
                    </div>
                        <%= form.file_field :cardimage, required: true  %>
                    <div class="verification-pic">
                        <%= verification_pic(@user) %>
                    </div>
                    <%= form.submit "Confirm", class: "confirm_button form-control" %>

                <% end %>
            </div>

        </div>
    </div>
</div>